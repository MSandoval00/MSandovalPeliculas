@model ML.Usuario
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>Slide Navbar</title> @*slide navbar style.css*@
    <link rel="stylesheet" type="text/css" href="~/css/recuperar.css">
    <link href="https://fonts.googleapis.com/css2?family=Jost:wght@500&display=swap" rel="stylesheet">
</head>
<body>
    
        <div class="main">
            <input type="checkbox" id="chk" aria-hidden="true">
            
            <div class="signup">
                 @using (Html.BeginForm("NewPassword", "Usuario", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                <form>
                    <h2>Nueva Contraseña Usuario</h2>
                    <h2>Ingresa la nueva contraseña del correo:</h2>

                    @Html.TextBoxFor(model => model.Password, new { @class = "form-control", @type = "password", @name = "pswd", @placeholder = "Ingrese su nuevo Password", @required="" })
                    @Html.TextBoxFor(model => model.Email, new { @class = "form-control",@style="display: none;", @type = "email", @name = "email", @placeholder = "Email", @required="" })
                     @Html.TextBoxFor(model => model.Password, new { @class = "form-control", @type = "password", @name = "pswd", @placeholder = "Escriba de nuevo el Password", @required="" })
                    <button type="submit">Recuperar contraseña</button>
                </form>
                }
            </div>
        </div>
</body>
</html>
